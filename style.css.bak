*{
    margin: 0 0;
    padding: 0 0;
    font-family: Arial, Helvetica, sans-serif;
}

.container{
    width: 80%;
    margin: 0 auto;
    padding: 1%;
}

.img-responsive{
    width: 100%;
}

.img-curve{
    border-radius: 15px;
}

.text-right{
    text-align: right;
}

.text-center{
    text-align: center;
}
.text-white{
    color: white;
}
.clearfix{
    clear: both;
    float: none;
}
a{
    color: #A3CB38;
    text-decoration: none;
}
a:hover{
    color: #009432;
}
.btn{
    padding: 1%;
    border: none;
    font-size: 1rem;
}
.btn-primary{
    background-color: #ED4C67;
    color: white;
    cursor: pointer;
}
.btn-primary:hover{
    color: white;
    background-color: #B53471;
}

h2{
    color: #EA2027;
    font-size: 2rem;
    margin-bottom: 2%;
}

h3{
    font-size: 1.5rem;
}

.float-container{
    position: relative;
}
.float-text{
    position: absolute;
    bottom: 50px;
    left: 40%;
}

/*navber*/
.logo{
    width: 5%;
    float: left;
}

.menu{
    line-height: 60px;
}
.menu ul{
    list-style-type: none;
}

.menu ul li{
    display: inline;
    padding: 1%;
    font-weight: bold;
}

/* food search*/

.food-search{
    background-image: url(../images/HmBg.jpg);
    background-size: cover;
    background-repeat: no-repeat;
    background-position: center;
    padding: 6% 0;
}

.food-search input[type= "search"]{
    width: 50%;
    padding: 1%;
    font-size: 1rem;
    border: none;
}

/* catagories*/

.category{
    padding: 4% 0;
}

.box-3{
    margin: 2%;
    float: left;
    width: 28%;
}
/* offer box*/
.food-menu{
    background-color: #ececec;
    padding: 4% 0;
}
.food-menu-box{
    width: 40%;
    margin: 1%;
    padding: 3%;
    float: left;
    background-color: white;
    border-radius: 15px;
}
.food-menu-img{
    width: 20%;
    float: left;
}
.food-menu-desc{
    width: 70%;
    float: left;
    margin-left: 8%;
}

.food-prize{
    font-size: 1.2rem;
    margin: 2% 0;
}
.food-detail{
    font-size: 0.9rem;
    color: #636e72;
}

/*for order page*/
.options{
    background-color: #d2dae2;
    padding: 2%;
}
.options ul{
    list-style-type: none;
    margin: 2%;
}
.options ul li{
    border: 2px solid black;
    display: inline;
    padding: 2%;
    margin: 2%;
    background-color: #636e72;
}
.options ul li a{
    font-size: 2rem;
    color: #ffffff;
}

/*order detail*/
.order{
    width: 50%;
    margin: 0 auto;
}
.input-responsive{
    width: 96%;
    padding: 1%;
    margin-bottom: 3%;
    border: none;
    border-radius: 5px;
    font-size: 1rem;
}
.order-label{
    margin-bottom: 1%; 
    font-weight: bold;
}



/* mobile size*/
@media only screen and (max-width:768px){
    .logo{
        width: 30%;
        float: none;
        margin: 1% auto;
    }
    .menu ul{
        text-align: center;
    }
    .food-search input{
        width: 90%;
        padding: 2%;
        margin-bottom: 5%;
    }
    .btn{
        width: 90%;
        padding: 2%;
    }
    .category{
        padding: 20% 0;
    }
    h2{
        margin-bottom: 10%;
    }
    .box-3{
        width: 90%;
        margin: 2% auto;
    }
    .food-menu{
        padding: 20% 0;
    }
    .food-menu-box{
        width: 90%;
        padding: 5%;
        margin-bottom: 5%;
    }

}